#include <stdio.h>

int main()
{
    int lin = 0, col = 0, tam = 5, matriz1[tam][tam];
    
    printf("Matriz: \n");
    for(lin = 0; lin < tam; lin++){
        for(col = 0; col < tam; col++){
            if(lin!=col){
            matriz1[lin][col] = 0;
            printf("%d", matriz1[lin][col]);
            printf("  ");
       }else{
            matriz1[lin][col] = 1;
            printf("%d", matriz1[lin][col]);
            printf("  ");
            }   
        }
        printf("\n");
    }
    
    return 0;
}
